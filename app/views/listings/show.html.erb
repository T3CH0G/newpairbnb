<div class="text-center">

<h1>Listing</h1>
Title:
<%=@listing.title%>
<br>
Description:
<%=@listing.description%>
Location:
<%=@listing.location%>
Tags:
<%= @listing.tag_list%>
<br>
Images:
<div class="row" >
<div class ="col-md-12">
<div class="image-div container">

  <% if @listing.avatars?%>
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <%for i in 0..@listing.avatars.count - 1 %>
          <li data-target="#myCarousel" data-slide-to="<%=i%>"></li>
          <%end%>
      </ol>

      <!-- Wrapper for slides -->
      <div class="carousel-inner" role="listbox">
        <% @listing.avatars.each_with_index do |avatar, index|%>
          <div class="item <%= 'active' if index == 0%>" style="width: 800px; height: 300px; margin: 0 auto;">
            <%= image_tag (avatar.large.url) %>
          </div>
          <%end%>
      </div>
      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">	
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>

      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  <%else%>
  No images yet!
  <%end%>
</div>
</div>


  <div class="row" >
    <div class ="col-md-12">
      <%if @listing.user != current_user%>
      <br><br>
      <h4>Booking form</h4>
    (Check for availability below, no 2 occupants can share the same timespan.)
    <br><br>
	 <form method=post action='/book'>
		<label for="from">From:</label>
		<input type="text" id="from" name="from">
		<label for="to">To:</label>
		<input type="text" id="to" name="to">
		<label for="amount">Number of people:</label>
		<input type="number" id="amount" name="amount">
		<input type="hidden" name="id" value=<%=@listing.id%> >
    <input type="hidden" name="price" value=<%=@listing.price%> >
		<input type="submit" value="Submit">
	</form>
    <% end %>
  </div>
  </div>
</div>

  <div class="row" >
    <div class ="col-md-12"> <br>
    <%if @listing.bookings.count > 0 %>
    <br><br>
    <h4>Bookings</h4>
  	<%@cbookings.each do |x|%>
	 <%=x.id%>.
  	Booking by:
  	<%=x.booker.name%>,
  	From:
  	<%=x.time_start.to_date%>,
  	Till:
  	<%=x.time_end.to_date%>

    <br><br>
	 <%end%>
  <% elsif currrent_user=@listing.user && @listing.bookings.count == 0%>
    <h4>No bookings yet!</h4>
    <br>
  <% else %>
    <br>
    <h4>No bookings yet! Fill in the fields above to book!</h4>
  <%end%>
  </div>
  </div>

<%= link_to "Home", root_path %>
<br>
<% if @listing.user == current_user %>
<%= link_to "Edit", edit_listing_path(@listing) %><br>
<%= link_to "Delete", listing_path(@listing), method: :delete %><br>
<%end%>
</div>
</div>


